<%= link_to 'Edit you profile', edit_user_path(@user) %>
</br>
<%= link_to "Log out", logout_path, method: "delete" %>
</br>

<%arr = issues_user(@user)%>
<%= link_to 'create new issue', new_issue_path %>
<p>Your to do list:</p>
<%arr = issues_user(@user)%>

<%if arr.nil? %>

<p>List is empty</p>

<%else%>

<table>
  <thead>
    <tr>
      <th>number</th>
      <th>subject</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>  	
      <% arr.each do |issue| %>
        <tr>
          <td><%= issue.number %></td>
          <td><%= issue.subject %></td>          
          <% unless issue.status %>   
          <td>at work</td>
          <%else%>       
          <td>is ready</td>
          <%end%>

          <td><%= link_to 'Show', issue %></td>
          <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
          <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure want delete this issue?' } %></td>  
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>